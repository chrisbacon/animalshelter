<div id='content'>
    <h1>Customers</h1>

    <div id="grid">
        <% for customer in @customers %>
            <ul class="grid_item">
                <li><span>Name</span> <%= customer.name %></li>
                <li><span>Pets</span> 
                    <ul class="pet_list">
                    <% for pet in customer.pets %>
                        <li class="pet"><%= pet.name %></li>
                    <% end %>
                    </ul>
                </li>
            </ul>
        <% end %>
    </div>
</div>