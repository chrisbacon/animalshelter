<nav>
	<ul>
		<% for species in @all_species %>
		<li>
			<a href="/pets/filter/<%= species.id %>" class="<%= @selected[species.id]%>"><%= species.name%></a>
		</li>
		<% end %>
	</ul>
</nav>

<h1><%= @species.group_name %></h1>

<div id="grid">
    <% for @pet in @pets %>
        <ul class="grid_item">
            <%= yield %>
            <li>
                <a href="/pets/<%= @pet.id %>">Show</a>
            </li>
        </ul>
    <% end %>
</div> 