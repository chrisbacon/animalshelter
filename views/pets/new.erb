<h1>Add new pet</h1>

<form action="/pets" method="post">
    <label>
        <span>Name:</span> 
        <input type="text" name="name"/>  
    </label>
    <label>
        <span>Species:</span> 
        <select name="species_id">
        <% for spec in @species %>
        	<option value = <%= spec.id %>><%= spec.name %></option>
        <% end%>
    	</select>
    </label>
    <input type="submit" value="Add">
</form>