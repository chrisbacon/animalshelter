<li>
    <span>Name:</span> 
    <span><%= @pet.name %></span>
</li>
<li>
    <span>Kind:</span> 
    <span><%= @pet.kind.name %></span>
</li>
<li>
    <span>Admission Date:</span> 
    <span><%= @pet.entry %></span>
</li>

<% if @pet.owner %>
<li>
    <span>Adoption Date:</span> 
    <span><%= @pet.exit %></span>
</li>
<li>
    <span>Owner:</span> 
    <span><%= @pet.owner.name %></span>
</li>

<% elsif @pet.is_adoptable? %>
<li>
    <span>Status:</span> 
    <span><a href="/pets/<%= @pet.id %>/adopt">Ready for adoption</a></span>
</li>

<% else %>
<li>
    <span>Status:</span> 
    <span>In observation</span>
</li>

<% end %>
