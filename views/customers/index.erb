<h1>Customers</h1>

<div id="grid">
    <% for @customer in @customers %>
        <div class="grid_item">
            <ul class = "flex-col">
                <%= erb :"customers/card" %>
            </ul>
            <a href="/customers/<%= @customer.id %>/delete">Remove record</a>
        </div>
    <% end %>
    
</div>